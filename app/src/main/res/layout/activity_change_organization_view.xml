<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ChangeOrganizationView">

    <EditText
    android:id="@+id/edtChangeOrganizationId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:ems="10"
    android:inputType="text"
    android:hint="Profile (OrganizationId)"
    android:textSize="16sp"
    android:text="" />

    <Button
    android:id="@+id/btnChangeOrganizationChangeOrganization"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Change Organization" />

    <TextView
    android:id="@+id/txtVChangeOrganizationResponse"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:textSize="20sp"
    android:text="" />

    </LinearLayout>
